{
  "name": "explain-like-i-am",
  "version": "1.0.0",
  "description": "I can explain anything to anyone. Built with SmythOS SDK.",
  "type": "module",
  "scripts": {
    "build": "npx esbuild src/server.ts --bundle --platform=node --format=esm --outfile=dist/server.js --external:@smythos/sdk --external:express --external:cors",
    "start": "mkdir -p ~/.smyth/.sre && echo '{\"default\":{\"openai\":\"'$OPENAI_API_KEY'\"}}' > ~/.smyth/.sre/vault.json && node dist/server.js"
  },
  "engines": {
    "node": "18"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^6.1.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^22.9.0",
    "esbuild": "^0.25.11",
    "rollup": "^2.79.2",
    "rollup-plugin-esbuild": "^6.2.1",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript-paths": "^1.5.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@smythos/sdk": "^1.3.1",
    "cors": "^2.8.5",
    "express": "^5.1.0"
  }
}